{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./public/",
        "paths": {
            "@/*": ["./src/*"]
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "include": ["src/index.tsx", "./declaration.d.ts"],
    "exclude": ["node_modules"]
}